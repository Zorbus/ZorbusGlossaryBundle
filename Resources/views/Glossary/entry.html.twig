{% extends 'ZorbusGlossaryBundle::layout.html.twig' %}

{% block body %}
    {% render 'ZorbusGlossaryBundle:Glossary:header' %}

    <div id="entry">
        {% if entry %}
            <h1>{{ entry.title }}</h1>
            {{ entry.description | raw }}
        {% else %}
            <p>Entry not available.</p>
        {% endif %}
    </div>
{% endblock %}
